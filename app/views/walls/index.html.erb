<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!-- Be sure to leave the brand out there if you want it shown -->
      <a class="brand" href="/walls">Walls</a>

      <a class="btn" href="<%=new_wall_path%>"><i class="icon-plus-sign"></i> New</a>


      <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), :class=>"btn" %>


      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse pull-right">
        <!-- .nav, .navbar-search, .navbar-form, etc -->
        <ul class="nav">
          <% if @current_user %>
            <li><a href="#"><%=@current_user.email%></a></li>
            <li><%= button_to "Sign Out", destroy_user_session_path, :method=>:delete, :class=>:btn %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


<br/>


<div class="row">
  <% @walls.each do |wall| %>
      <div class="span2">
        <%= link_to wall.name, wall %>
        <%= link_to wall do %>
            <%= image_tag wall.revisions.last.image.url(:thumb) %>
        <% end %>
        <%= link_to 'Edit', edit_wall_path(wall) %>
        <%= link_to 'Destroy', wall, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
  <% end %>
</div>
