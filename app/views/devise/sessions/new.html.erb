<div class="container">



<h1>Sign in</h1>



<form>
  <fieldset>
    <legend>With another account</legend>
    <%- if devise_mapping.omniauthable? %>
        <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, "google_oauth2"),:class=>"btn btn-primary" %><br />
    <% end -%>
  </fieldset>
</form>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <fieldset>
    <legend>With credentials</legend>
    <% if alert  %>
    <div class="alert alert-error"><%=alert %></div>
    <% end %>
    <%= f.email_field :email, :autofocus => true, :placeholder=>"your email" %>
    <%= f.password_field :password, :placeholder=>"your password" %>
    <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
            <%= f.check_box :remember_me %> Remember me
        </label>
    <% end -%>
    <%= f.submit "Sign in", :class=>"btn" %>
  </fieldset>
<% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      No account?  Then <%= link_to "sign up", new_registration_path(resource_name) %><br />
  <% end -%>

</div>