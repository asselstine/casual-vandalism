<div class="smalltron">
  <h1>Sign in</h1>
</div>

<div class="container">
<form>
  <fieldset>
    <legend>With o-auth</legend>
    <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider),:class=>"btn btn-primary" %><br />
        <% end -%>
    <% end -%>
  </fieldset>
</form>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <fieldset>
    <legend>With credentials</legend>
    <% if alert  %>
    <div class="alert alert-error"><%=alert %></div>
    <% end %>
    <%= f.email_field :email, :autofocus => true, :placeholder=>"your email" %>
    <%= f.password_field :password, :placeholder=>"your password" %>
    <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
            <%= f.check_box :remember_me %> Remember me
        </label>
    <% end -%>
    <%= f.submit "Sign in", :class=>"btn" %>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>

</div>